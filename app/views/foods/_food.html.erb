<div id="<%= dom_id food %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Taco:</strong>
    <%= food.taco_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this food", food, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    
    <hr class="mt-6">
  <% end %>
</div>
