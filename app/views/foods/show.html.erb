<%= render "helpers/navbar" %>

  <div class="pt-5 mx-auto md:w-2/3 w-full">
    
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    
    <h1 class="text-4xl font-extrabold dark:text-white"><%= @food.snack %></h1>
    <h6 class="text-lg font-bold dark:text-white"><%= Time.at(@food.created_at.to_i/1000).strftime('%d/%m/%Y %H:%M') %></h6>

    <div class="pt-5 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <table class="table-fixed">
        <thead class="border-b bg-blue-500 text-white px-3 py-2 ">
          <tr class="border-collapse border border-slate-400">
            <th scope="col" class="text-sm font-medium text-white px-6 py-4">ID</th>
            <th scope="col" class="text-sm font-medium text-white px-6 py-4">Descrição</th>
            <th scope="col" class="text-sm font-medium text-white px-6 py-4">Proteína (g)</th>
            <th scope="col" class="text-sm font-medium text-white px-6 py-4">Carboidrato (g) </th>
            <th scope="col" class="text-sm font-medium text-white px-6 py-4">Calorias (cal) </th>
          </tr>
        </thead>
        <% @taco_food.each do |taco_food| %>
          <tbody>
            <tr class="border-b">
              <td class="text-sm text-gray-900 font-light px-6 py-4">
                <%= taco_food['id'] %>
              </td>
              <td class="text-sm text-gray-900 font-light px-6 py-4">
                <%= taco_food['description'] %>
              </td>
              <td class="text-sm text-gray-900 font-light px-6 py-4">
                <%= taco_food['attributes']['protein']['qty'].to_f.round(2) rescue '0' %>
              </td>
              <td class="text-sm text-gray-900 font-light px-6 py-4">
                <%= taco_food['attributes']['carbohydrate']['qty'].to_f.round(2) rescue '0' %>
              </td>
              <td class="text-sm text-gray-900 font-light px-6 py-4">
                <%= taco_food['attributes']['energy']['kcal'].to_i.round() %>
              </td>
            </tr>
          </tbody>
          <% end %>
      </table>
  
    
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this food', food_path(@food), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 font-medium text-white" %>
    </div>
    <%= link_to 'Back to foods', foods_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-500 inline-block font-medium  text-white" %>
  </div>
</div>
