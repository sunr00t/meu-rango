<div id="<%= dom_id user %>">
  
  <p>
    <strong class="block font-medium mb-1">Avatar:</strong>
  <%= image_tag user.avatar, class: "w-12 h-12 rounded-full" %>  
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= user.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= user.email %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this user", user, class: "rounded-lg py-3 px-5 bg-green-400 inline-block font-medium" %>
    <%= link_to 'Edit this user', edit_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-amber-400 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
